generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  firstName   String?
  lastName    String?
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  price        Float
  quantity     Int
  date_added   DateTime @default(now())
  date_modified DateTime @updatedAt
}